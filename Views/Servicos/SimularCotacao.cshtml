				<div class="col-md-6">
					<div class="form-group">
						<label for="Cidade">Prazo de coleta</label>
						<input type="text" class="form-control" value="24 Horas" disabled>
					</div>
				</div>

				<div class="col-md-6">
					<div class="form-group">
						<label for="Peso">Peso</label>
						<input required="required" type="text" class="form-control" id="Peso" name="Peso" placeholder="Ex: 10Kg = 10" maxlength="10" onkeypress="apenasNumeros(event)">
					</div>
				</div>


				<div class="col-md-12 mt-4" id="simularCotacao">
